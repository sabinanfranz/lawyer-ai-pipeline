{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "XDG_CACHE_HOME=.cache NEXT_SWC_CACHE_DIR=.cache/next-swc next build",
    "start": "next start",
    "lint": "eslint",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "npm run prisma:generate",
    "db:migrate:deploy": "prisma migrate deploy",
    "railway:start": "npm run db:migrate:deploy && npm run start",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:validate": "prisma validate"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "nanoid": "^5.1.6",
    "next": "^16.1.6",
    "prisma": "^5.20.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.30",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "tailwindcss": "^4",
    "typescript": "5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}
